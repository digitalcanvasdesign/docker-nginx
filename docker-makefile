include .env
export TAG=${REPOSITORY}:${VERSION}
export HUB=https://${BASIC_AUTH_USER}:${BASIC_AUTH_PASS}@containers.jasonraimondi.com

default: build

build:
	docker build -t ${TAG} .

push:
	docker push ${TAG}

run:
	docker run --rm ${TAG}

list:
	@curl -s ${HUB}/v2/${REPOSITORY}/tags/list | python -mjson.tool
